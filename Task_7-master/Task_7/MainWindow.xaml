<Window x:Name="MainWindow1" x:Class="Task_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_7"
        mc:Ignorable="d"
        Title="Task 7" Height="450" Width="800" WindowState="Maximized">
    <Grid x:Name="MainGrid">
        <Button x:Name="Read_button" Content="Read File" HorizontalAlignment="Left" Margin="12,10,0,0" VerticalAlignment="Top" Width="117" RenderTransformOrigin="0.5,0.5" Height="46" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.088"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Image x:Name="Graph_image" Height="300" HorizontalAlignment="Stretch" Margin="0,59,0.333,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="1400"/>
        <Image x:Name="IndicatorImage" HorizontalAlignment="Stretch" Height="300" Margin="0,246,0,0" VerticalAlignment="Top" Width="1400"/>

    </Grid>
</Window>
